{
	"compilerOptions": {
			"target": "es5",
			"module": "commonjs",
			"lib": ["es6"],
			"allowJs": true,
			"jsx": "react",
			"sourceMap": true,
			"outDir": "./dist",
			"strict": true,
			"noImplicitAny": true,
			"moduleResolution": "node",
			"baseUrl": "./",
			"paths": {
					"*": [
							"node_modules/*",
							"src/types/*"
					]
			},
			"esModuleInterop": true,
			"skipLibCheck": true,
			"forceConsistentCasingInFileNames": true
	},
	"include": [
			"src/**/*"
	],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
